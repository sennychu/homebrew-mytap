class Mtools < Formula
  homepage ''
  url 'ftp://ftp.gnu.org/gnu/mtools/mtools-4.0.18.tar.gz'
  sha1 'd703db71a409837a37db10a09ef63a35183f7565'

  # depends_on 'cmake' => :build
  # depends_on :x11 # if your formula requires any X11/XQuartz components
  depends_on :'autotools'  # if the package uses autotools i.e. if it 
has a configure script. 

  def install
    # ENV.j1  # if your formula's build system can't parallelize

    system "./configure", "--disable-debug", "--disable-dependency-tracking",
                          "--prefix=#{prefix}"
    # system "cmake", ".", *std_cmake_args
    system "make", "install" # if this fails, try separate make/make install steps
  end

  test do
    # `test do` will create, run in and delete a temporary directory.
    #
    # This test will fail and we won't accept that! It's enough to just replace
    # "false" with the main program this formula installs, but it'd be nice if you
    # were more thorough. Run the test with `brew test mtools`.
    system "false"
  end
end
